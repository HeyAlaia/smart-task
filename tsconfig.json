{
    "compilerOptions": {
        "outDir": "./built",
        "target": "ES5",
        "lib": [
            "ES6",
            "DOM",
            "es2015"
        ],
        "module": "commonjs", // 指定生成代码的模板标准
        "noImplicitAny": true, // 不允许隐式的 any 类型
        "removeComments": true, // 删除注释 
        "preserveConstEnums": true, // 保留 const 和 enum 声明
        "sourceMap": false // 生成目标文件的sourceMap文件
    },
    "files": [ // 指定待编译文件
        "./src/index.ts"
    ]
}